<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraActivity"
    android:orientation="vertical"
    android:background="#000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/fundo"
        android:textColor="#ffff"
        android:text=""
        android:hint="0"
        android:textSize="60dp"
        android:textColorHint="#ffff"
        android:gravity="right"
        android:padding="10dp"
        android:id="@+id/visor_calculadora"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="AC"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="limpar"
            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="+-"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="negativoPositivo"
            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="%"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addPercent"


            />
        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/corBotao"
            android:text="รท"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addOperacao"


            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="7"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"


            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="8"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="9"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />
        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/corBotao"
            android:text="x"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addOperacao"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="4"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="5"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="6"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />
        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/corBotao"
            android:text="-"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addOperacao"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="1"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="2"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="3"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"

            />
        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/corBotao"
            android:text="+"
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addOperacao"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:background="@color/botaoCinza"
            android:paddingVertical="12dp"
            android:text="0"
            android:gravity="left"
            android:paddingHorizontal="33dp"
            android:textSize="50dp"
            android:layout_margin="1dp"
            android:onClick="addValor"
            />



        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/botaoCinza"
            android:text="."
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="addValor"


            />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@color/corBotao"
            android:text="="
            android:textSize="50dp"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:onClick="exibirResultado"
            />




    </LinearLayout>

</LinearLayout>